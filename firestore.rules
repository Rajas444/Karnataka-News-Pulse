rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is an admin
    function isAdmin(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.isAdmin == true;
    }
    
    // Users can only read and write their own profile.
    // An admin can read any user's profile.
    match /users/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || isAdmin(request.auth.uid));
      // Users can't make themselves admin.
      allow create: if request.auth != null && request.auth.uid == userId && request.resource.data.isAdmin == false;
      allow update: if request.auth != null && request.auth.uid == userId && request.resource.data.isAdmin == resource.data.isAdmin;
      // No user should be able to delete their profile from the client.
      allow delete: if false; 
    }

    // News articles can be read by anyone.
    // Users can create articles.
    // Users can only update or delete their own articles.
    // Admins can update or delete any article.
    match /news/{newsId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && (resource.data.userId == request.auth.uid || isAdmin(request.auth.uid));
    }
  }
}
